<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sky"
        android:contentDescription="Wallpaper"
        android:alpha="0.5"/>

    <Button
        android:id="@+id/btn_move_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/move_activity"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/btn_dial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dial_number"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/btn_move_activity"/>

    <Button
        android:id="@+id/openChromeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_browser"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/btn_dial_number"/>

</RelativeLayout>
